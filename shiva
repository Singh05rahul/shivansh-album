<script>
// Create Album Pages
const totalPhotos = 12;
const book = document.getElementById("book");

// âœ… Cover Page First
const coverPage = document.createElement("div");
coverPage.classList.add("page","cover");
coverPage.innerHTML = `
  <div class="front">
    <h1>ðŸ’– Sweet Memories of Shivansh ðŸ’–</h1>
    <p>My Little Brother, My Joy ðŸŒ¸</p>
  </div>
`;
book.appendChild(coverPage);

// âœ… Photo Pages (no "The End")
for (let i = 1; i <= totalPhotos; i++) {
  const page = document.createElement("div");
  page.classList.add("page");
  page.innerHTML = `
    <div class="front"><img src="${i}.jpg" alt="photo${i}"></div>
    <div class="back"><img src="${i+1 > totalPhotos ? 1 : i+1}.jpg" alt="photo${i+1}"></div>
  `;
  book.appendChild(page);
}

// Floating Backgrounds
function createHearts(){
  for(let i=0;i<15;i++){
    const heart=document.createElement("div");
    heart.classList.add("heart");
    heart.style.left=Math.random()*100+"vw";
    heart.style.animationDuration=(3+Math.random()*3)+"s";
    heart.textContent="ðŸ’–";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),6000);
  }
}
setInterval(createHearts,2000);

function createFlowers(){
  for(let i=0;i<10;i++){
    const flower=document.createElement("div");
    flower.classList.add("flower");
    flower.style.left=Math.random()*100+"vw";
    flower.textContent="ðŸŒ¸";
    flower.style.animationDuration=(4+Math.random()*4)+"s";
    document.body.appendChild(flower);
    setTimeout(()=>flower.remove(),8000);
  }
}
setInterval(createFlowers,3000);

function createFirework(){
  const fw=document.createElement("div");
  fw.classList.add("firework");
  fw.style.left=Math.random()*100+"vw";
  fw.style.top=Math.random()*100+"vh";
  document.body.appendChild(fw);
  setTimeout(()=>fw.remove(),1500);
}
setInterval(createFirework,2000);

// Flip Logic
const pages = Array.from(book.querySelectorAll(".page"));
let current = 0;
function showPage(index){
  pages.forEach((page,i)=>{
    if(i<index){ page.classList.add("flipped","prev-visible"); }
    else{ page.classList.remove("flipped","prev-visible"); }
  });
  createFirework();
}
book.addEventListener("click",e=>{
  const rect=book.getBoundingClientRect();
  const x=e.clientX-rect.left;
  if(x>rect.width/2 && current<pages.length-1) current++;
  else if(x<rect.width/2 && current>0) current--;
  showPage(current);
});

// Swipe
let startX=0;
book.addEventListener("touchstart",e=>startX=e.touches[0].clientX);
book.addEventListener("touchend",e=>{
  const endX=e.changedTouches[0].clientX;
  if(endX-startX<-50 && current<pages.length-1) current++;
  else if(endX-startX>50 && current>0) current--;
  showPage(current);
});

// Start Button
function startAlbum(){
  document.getElementById("frontPage").style.opacity="0";
  setTimeout(()=>{
    document.getElementById("frontPage").style.display="none";
    book.classList.add("visible");
    document.getElementById("albumTitle").classList.add("visible");
  },1000);
}
</script>
</body>
